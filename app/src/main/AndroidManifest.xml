<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tardin.appioca">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appioca"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_appioca_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appioca">
        <activity android:name=".MyRecipesActivity"></activity>
        <activity android:name=".ShowRecipeActivity" />
        <activity android:name=".CreateNewRecipeActivity" />
        <activity
            android:name=".UserActivity"
            android:theme="@style/Theme.Appioca"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Appioca">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>